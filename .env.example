# Environment
NODE_ENV=development

# API Configuration
PORT=4000
API_URL=http://localhost:4000

# Database (Shared with Core System)
DATABASE_URL=postgresql://username:password@localhost:5432/healthflow_production
DATABASE_SCHEMA=portal

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=1

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=portals_

# Authentication (Shared JWT Secret with Core)
JWT_SECRET=your-shared-jwt-secret-here
JWT_EXPIRES_IN=24h

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=healthflow-portals-documents

# Email Service (SendGrid/SES)
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=
EMAIL_FROM=noreply@healthflow.ai

# SMS Service (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# Monitoring
DATADOG_API_KEY=
DATADOG_APP_KEY=
DATADOG_SERVICE_NAME=digital-prescription-portals

# Feature Flags
ENABLE_RECALL_SYSTEM=true
ENABLE_ADVERSE_EVENTS=true
ENABLE_ANALYTICS=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

